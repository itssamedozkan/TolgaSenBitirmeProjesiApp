<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bitirme.thhomesecurity">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LivingActivity"></activity>
        <activity android:name=".GarageActivity" />
        <activity android:name=".BasementActivity" />
        <activity android:name=".StairsActivity" />
        <activity android:name=".GardenActivity" />
        <activity android:name=".Bedroom2Activity" />
        <activity android:name=".Bedroom1Activity" />
        <activity android:name=".GymActivity" />
        <activity android:name=".KitchenActivity" />
        <activity android:name=".GeneralActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".InterfaceActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".fcm.FirebaseMessageReciever">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>

            </intent-filter>
        </service>
    </application>

</manifest>